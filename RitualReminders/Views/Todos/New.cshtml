@model RitualReminders.ViewModels.NewTodoViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Ritual</h2>

@using (Html.BeginForm("Save", "Todos"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Todo.Title)
        @Html.TextBoxFor(m => m.Todo.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Todo.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Todo.TodoSnoozeId)
        @Html.DropDownListFor(m => m.Todo.TodoSnoozeId, new SelectList(Model.TodoSnoozes, "Id", "Title"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Todo.TodoSnoozeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Todo.DueDate)
        @Html.TextBoxFor(m => m.Todo.DueDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Todo.DueDate)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Todo.Completed) Completed?
        </label>
    </div>
   @* @Html.HiddenFor(m => m.Customer.Id)
    @Html.AntiForgeryToken()*@
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}




