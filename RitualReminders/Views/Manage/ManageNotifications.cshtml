@model RitualReminders.ViewModels.NotificationsViewModel
@{
    ViewBag.Title = "Set Your Notifications";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ManageNotifications", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Text and Email Management</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="checkbox">
        @Html.CheckBoxFor(m => m.ReceiveNewsletter)
        Receive Newsletter?
    </div>
    <div class="checkbox">
        @Html.CheckBoxFor(m => m.ReceiveEmailReminders)
        Receive Email Reminders?
    </div>
    <div class="checkbox">
        @Html.CheckBoxFor(m => m.ReceiveTextMessagesReminders)
        Receive Text Messages?
    </div>
    <div class="checkbox">
        @Html.CheckBoxFor(m => m.ReceiveInspirationalReminders)
        Receive Inspirational and Encouraging Messages to get you moving forward?
    </div>
    <br />
    <br/>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
            @Html.ActionLink("Go Back", "Index", null, new { @class = "btn btn-info" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
